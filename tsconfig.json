{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },
    "allowJs": true,  
    "resolveJsonModule": true,  
    "skipLibCheck": true,  
    "noImplicitAny": false  
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "app/_layout.tsx",
    "nativewind-env.d.ts",
    "types/**/*.d.ts",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ],
  "exclude": ["node_modules", "babel.config.js", "metro.config.js"]
}
